<% layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3 border d-flex flex-column ">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="mb-3 ">
                <label class="form-label" for="title">Title</label>
                <input class="form-control width-100" type="text" name="campground[title]" id="title" value="<%= campground.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0.00" aria-label="price-label" value="<%= campground.price %>">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="Image" value="<%= campground.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description"><%= campground.description %></textarea>
            </div>
            <button class="btn btn-success">Save Changes</button>
        </form>
        <a class="mt-2" href="/campgrounds">All Campgrounds</a>
    </div>
</div>